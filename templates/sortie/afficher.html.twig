{% extends 'base.html.twig' %}

{% block body %}
    <h1>Afficher une sortie</h1>
    <ul>
        <li>Nom de la sortie : {{ sortie.nom }}</li>
        <li>Date et heure de la sortie : {{ sortie.dateHeureDebut | date('d/m/Y H:i') }}</li>
        <li>Date limite d'inscription : {{ sortie.dateLimitInscription | date('d/m/Y') }}</li>
        <li>Nombre de places : {{ sortie.nbInscriptionsMax }}</li>
        <li>Dur√©e : {{ sortie.duree | date('H:i') }}</li>
        <li>Ville organisatrice : {{ sortie.site.nom }}</li>
        <li>Lieu : {{ sortie.lieu.nom }}</li>
        <li>Rue : {{ sortie.lieu.rue }}</li>
        <li>Code postal : {{ sortie.lieu.ville.codePostal }}</li>
        <li>Latitude : {{ sortie.lieu.latitude }}</li>
        <li>Longitude : {{ sortie.lieu.longitude }}</li>
        <li>Description et infos : {{ sortie.infosSortie }}</li>
    </ul>

    <h2>Liste des participants</h2>
    <table>
        <tr>
            <th>Pseudo</th>
            <th>Nom</th>
        </tr>
        <tr>
            {% for leparticipant in sortie.participant %}
                <td>{{ leparticipant.pseudo }}</td>
                <td>{{ leparticipant.prenom }} {{ leparticipant.nom }}</td>
            {% endfor %}
        </tr>
    </table>
{% endblock %}

{% block title %}
    {{ parent() }}Sortie : {{ sortie.nom }}
{% endblock %}

